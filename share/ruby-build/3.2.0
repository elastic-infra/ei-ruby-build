# Detect architecture and install appropriate binary
case "$(uname -m)" in
  x86_64)
    install_package "ruby-3.2.0" "https://ei-shiroma-test-ruby.s3.ap-northeast-1.amazonaws.com/v3.2.0/ruby-3.2.0-linux-x86_64.tar.gz" copy
    ;;
  aarch64)
    install_package "ruby-3.2.0" "https://ei-shiroma-test-ruby.s3.ap-northeast-1.amazonaws.com/v3.2.0/ruby-3.2.0-linux-aarch64.tar.gz" copy
    ;;
  *)
    echo "Unsupported architecture: $(uname -m)" >&2
    exit 1
    ;;
esac
